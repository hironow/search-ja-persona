{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor"
			],
			"groupName": "all minor updates"
		},
		{
			"matchUpdateTypes": [
				"patch"
			],
			"groupName": "all patch updates"
		}
	],
	"schedule": [
		"every weekend"
	],
	"timezone": "Asia/Tokyo",
	"stabilityDays": 7
}